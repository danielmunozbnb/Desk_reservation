{
  "id": "home",
  "endPoints": [
    {
      "name": "workers",
      "baseUrlType": "workday-staffing",
      "url": "workers",
      "authType": "sso"
    },
    {
      "name": "workersInfo",
      "baseUrlType": "wql",
      "url": "<%'https://api.workday.com/wql/v1/data?query=SELECT%20worker%2C%20firstName%2C%20lastName%2C%20businessTitle%0AFROM%20allWorkers%0AWHERE%20firstName%20CONTAINS%20%22'+ search +'%22%20OR%20lastName%20CONTAINS%20%22'+ search +'%22'%>",
      "authType": "sso",
      "deferred": true
    }
  ],
  "outboundData": {
    "outboundEndPoints": [
      {
        "name": "workerUpdate",
        "baseUrlType": "workday-common",
        "url": "<% 'workers/e5676da5af0601cf49355520bf46d513/businessTitleChanges' %>",
        "httpMethod": "POST",
        "deferred": true,
        "authType": "sso",
        "onSend": "<%

                   var workersList = dataGrid.getSelectedRows().map(x => {
                     var obj = {:}; //instantiates an empty map

                     var businessTitle = x.childrenMap.colBusinessTitle.value;

                     obj.add('proposedBusinessTitle', businessTitle);
                     return obj;
                   });

                   return workersList.get(0);
                   %>",
        "_values": [
          {
            "outboundPath": "businessTitle",
            "value": "<% dataGrid.currentRow.colBusinessTitle %>"
          }
        ]



      }
    ]

  },

  "presentation": {
    "pageType": "edit",
    "title": {
      "type": "title",
      "label": "Test Dynamic Grid"
    },
    "body": {
      "type": "section",
      "horizontal": false,
      "sorted": false,
      "children": [
        {
          "type": "section",
          "horizontal": true,
          "children": [
            {
              "type": "fieldSet",
              "id": "fieldSetContainer",
              "children": [
                {
                  "type": "text",
                  "id": "searchName",
                  "label": "Please enter a name to search",
                  "onChange": "<%
                               // Call the workerData endpoint with the user-entered name as a parameter.
                               var test = workersInfo.invoke({'search': self.value});
                               // Make the grid visible and set its row data.

                               dataGrid.setRows(test.data);
                               %>"
                },
                {
                  "type": "grid",
                  "id": "dataGrid",
                  "gridType": "LIST",
                  "rows": "<% [] %>",
                  "rowVariableName": "row",
                  "_doNotAdd": "true",
                  "_doNotRemoveRow": "true",
                  "enabled": true,
                  "selectionEnabled": true,
                  "currentRowVariable": "currentRow",
                  "isArrayOutBinding": false,
                  "columns": [
                    {
                      "type": "column",
                      "columnId": "colEmployeeId",
                      "label": "Employee ID",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.worker.id %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colFirstName",
                      "label": "First Name",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.firstName %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colLastName",
                      "label": "Last Name",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.lastName %>"
                      }
                    },
                    {
                      "type": "column",
                      "columnId": "colBusinessTitle",
                      "label": "Business Title",
                      "cellTemplate": {
                        "type": "text",
                        "value": "<% row.businessTitle %>"
                      }

                    }
                  ]
                },
                {
                  "type": "pageActionButton",
                  "id": "myPageActionButton",
                  "visible": true,
                  "label": "Submit changes",
                  "onClick": "<%

                              var submit = workerUpdate.invoke();

                              myText.value = 'Yes'

                              %>"
                },
                {
                  "type": "text",
                  "id": "myText",
                  "enabled": "false",
                  "label": "Have you submited changes yet?",
                  "value": "<% 'No' %> "
                }

              ]
            }
          ]
        }
      ]
    },
    "footer": {
      "type": "footer",
      "children": [
        {
          "type": "richText",
          "enabled": "false",
          "value": "Powered By Daniel & Andrei"
        }
      ]
    }
  }
}